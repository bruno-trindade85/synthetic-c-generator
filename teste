#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// ❌ Exemplo 1: vazamento em early return
char* read_prefix(const char* path, size_t n) {
    FILE* f = fopen(path, "r");           // ❌ Pode não ser fechado em alguns caminhos
    if (!f) return NULL;

    char* buf = (char*)malloc(n + 1);     // ❌ alocado
    if (!buf) { fclose(f); return NULL; }

    size_t r = fread(buf, 1, n, f);
    if (r == 0) {
        // ❌ early return sem free — vazamento
        fclose(f);
        return NULL;
    }
    buf[r] = '\0';

    // ❌ Esquecemos fclose aqui — vazamento de recurso
    return buf; // ❌ Chamador não libera -> vazamento típico em teste
}

int main() {
    char* data = read_prefix("input.txt", 100);
    if (data) {
        printf("%s\n", data);
        // ❌ Esquecemos free(data);
    }
    return 0;
}
